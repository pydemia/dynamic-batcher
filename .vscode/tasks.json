{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "redis-launch",
            "type": "docker-run",
            "dockerRun": {
                "containerName": "redis",
                "image": "bitnami/redis:latest",
                "env": {
                    "REDIS_PASSWORD": "redis!"
                },
                "ports": [
                    {
                        "containerPort": 6379,
                        "hostPort": 6379
                    }
                ],
                "remove": true
            }
        },
        {
            "label": "redis-shutdown",
            "type": "shell",
            "command": "docker container stop redis || true",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true,
                "revealProblems": "onProblem",
                "close": false
            },
            "problemMatcher": []
        },
        {
            "label": "redis-restart",
            "dependsOrder": "sequence",
            "dependsOn": [
                "redis-shutdown",
                "redis-launch",
            ]
        },
		{
			"label": "locust-launch",
			"type": "shell",
			"command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "dotenv",
                "-f",
                ".env",
                "run",
                "${command:python.interpreterPath}",
				"-m",
				"locust"
            ],
            "options": {
                "cwd": "${workspaceFolder}/e2e/locust"
            },
            "group": "test",
            "presentation": {
                "group": "test",
                "clear": true,
                "close": false,
                "reveal": "silent",
                "panel": "shared",
                "revealProblems": "onProblem"
            }
		},
		{
			"label": "package-build",
			"type": "shell",
			"command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "presentation": {
                "group": "test",
                "clear": true,
                "close": false,
                "reveal": "silent",
                "panel": "shared",
                "revealProblems": "onProblem"
            }
		},
		{
			"label": "package-upload",
			"type": "shell",
			"command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "twine",
                "upload",
                "dist/*"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "presentation": {
                "group": "test",
                "clear": true,
                "close": false,
                "reveal": "silent",
                "panel": "shared",
                "revealProblems": "onProblem"
            }
		}
	]
}