{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "llm-launch",
            "type": "docker-run",
            "dependsOrder": "sequence",
            "dependsOn": [
                "llm-shutdown",
                "redis-restart",
            ],
            "dockerRun": {
                "customOptions": "--platform=linux/amd64",
                "network": "host",
                "containerName": "llm",
                "image": "codevai.azurecr.io/apps/corus-private-llm:latest",
                "entrypoint": "/bin/bash",
                "command": "-c 'python batch_processor.py & gunicorn app:app --workers=1 -k uvicorn.workers.UvicornWorker --preload --timeout=10 -b 0.0.0.0:8000'",
                "env": {
                    "REDIS__HOST": "127.0.0.1",
                    "REDIS__PORT": "6379",
                    "LOAD_8BIT": "false",
                    "TERM": "256color",
                    "MODEL_NAME": "models/deepseek-1_3b",
                },
                "ports": [
                    {
                        "containerPort": 8000,
                        "hostPort": 8000
                    }
                ],
                "remove": true
            }
        },
        {
            "label": "llm-shutdown",
            "type": "shell",
            "command": "docker container stop llm || true",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true,
                "revealProblems": "onProblem",
                "close": false
            },
            "problemMatcher": []
        },
        {
            "label": "redis-launch",
            "type": "docker-run",
            "dockerRun": {
                "containerName": "redis",
                "image": "bitnami/redis:latest",
                "env": {
                    // "REDIS_PASSWORD": "redis!",
                    "ALLOW_EMPTY_PASSWORD": "yes",
                },
                "ports": [
                    {
                        "containerPort": 6379,
                        "hostPort": 6379
                    }
                ],
                "remove": true
            }
        },
        {
            "label": "redis-shutdown",
            "type": "shell",
            "command": "docker container stop redis || true",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true,
                "revealProblems": "onProblem",
                "close": false
            },
            "problemMatcher": []
        },
        {
            "label": "redis-restart",
            "dependsOrder": "sequence",
            "dependsOn": [
                "redis-shutdown",
                "redis-launch",
            ]
        },
		{
			"label": "locust-launch",
			"type": "shell",
			"command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "dotenv",
                "-f",
                ".env",
                "run",
                "${command:python.interpreterPath}",
				"-m",
				"locust"
            ],
            "options": {
                "cwd": "${workspaceFolder}/e2e/locust"
            },
            "group": "test",
            "presentation": {
                "group": "test",
                "clear": true,
                "close": false,
                "reveal": "silent",
                "panel": "shared",
                "revealProblems": "onProblem"
            }
		},
		{
			"label": "package-build",
			"type": "shell",
			"command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "presentation": {
                "group": "test",
                "clear": true,
                "close": false,
                "reveal": "silent",
                "panel": "shared",
                "revealProblems": "onProblem"
            }
		},
		{
			"label": "package-upload",
			"type": "shell",
			"command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "twine",
                "upload",
                "dist/*"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "presentation": {
                "group": "test",
                "clear": true,
                "close": false,
                "reveal": "silent",
                "panel": "shared",
                "revealProblems": "onProblem"
            }
		}
	]
}